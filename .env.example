# Django Backend Environment Variables
# Copy this to .env and fill in your values

# SECURITY - REQUIRED
SECRET_KEY=your-super-secret-key-change-this-in-production-min-50-chars
DEBUG=False

# ALLOWED HOSTS - comma separated, no spaces
ALLOWED_HOSTS=your-app.onrender.com,localhost,127.0.0.1

# DATABASE - Render provides DATABASE_URL automatically
# For local development, leave commented to use SQLite
# DATABASE_URL=postgresql://user:password@host:port/dbname

# CORS - Add your Vercel frontend URL
CORS_ALLOWED_ORIGINS=https://your-frontend.vercel.app,http://localhost:3000

# For local development with DEBUG=True
# DEBUG=True
# ALLOWED_HOSTS=localhost,127.0.0.1
# CORS_ALLOWED_ORIGINS=http://localhost:3000,http://127.0.0.1:3000
